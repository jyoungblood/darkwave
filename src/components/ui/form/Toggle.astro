---
// DW - Form toggle component using FlyonUI switch styling

interface Props {
  label: string;
  name: string;
  required?: boolean;
  class?: string;
  checked?: boolean;
  disabled?: boolean;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
  color?:
    | "primary"
    | "secondary"
    | "accent"
    | "info"
    | "success"
    | "warning"
    | "error";
  helperText?: string;
  outline?: boolean;
}

const {
  label,
  name,
  required = false,
  class: customClass = "",
  checked = false,
  disabled = false,
  size = "md",
  color = "primary",
  helperText,
  outline = false,
} = Astro.props;

const defaultClass = "flex items-center gap-1";
const className = customClass ? `${defaultClass} ${customClass}` : defaultClass;

// Build switch classes
const switchClasses = [
  "switch",
  size && `switch-${size}`,
  color && `switch-${color}`,
  outline && "switch-outline",
  disabled && "opacity-50 cursor-not-allowed",
]
  .filter(Boolean)
  .join(" ");
---

<div class={className}>
  <input
    type="checkbox"
    class={switchClasses}
    id={name}
    name={name}
    required={required}
    checked={checked}
    disabled={disabled}
  />
  <label class="label-text" for={name}>
    {label}
    {
      helperText && (
        <span class="block text-gray-500">
          {helperText}
        </span>
      )
    }
  </label>
</div>

