---
import AdminLayout from "@/layouts/AdminLayout.astro";
import UserForm from "@/components/forms/UserForm.astro";
import { db } from "@/lib/db";
import { canEdit } from "@/lib/auth/permissions";
const id = Astro.url.searchParams.get("id");

if (!id) {
  return Astro.redirect("/admin/users");
}

let user;

try {
  user = await db
    .selectFrom("user")
    .selectAll()
    .where("id", "=", id)
    .executeTakeFirst();
} catch (error) {
  console.error("Error fetching user:", error);
}

if (!user) {
  return new Response(null, {
    status: 404,
  });
}

// const can_edit = await canEdit({
//   locals: Astro.locals,
//   resourceType: "user",
//   id,
//   ownerId: user?.id,
// });

const can_edit = Astro.locals.authRoles?.includes("admin");
if (!can_edit) {
  return Astro.redirect(`/admin/users/`);
}
---

<AdminLayout title={`${user?.email} | Edit User`}>
  <div class="w-full">
    <UserForm user={user} redirect="/admin/users" />
  </div>
</AdminLayout>
