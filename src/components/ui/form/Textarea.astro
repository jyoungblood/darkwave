---
// DW - Form textarea component

import Label from "@/components/ui/form/Label.astro";

interface Props {
  label?: string;
  sublabel?: string | string[];
  name: string;
  required?: boolean;
  value?: string;
  placeholder?: string;
  class?: string;
}

const defaultClass = "textarea max-w-full";
// const defaultClass = 'p-2 border border-neutral-400 rounded-md';
const {
  label,
  sublabel,
  name,
  required = false,
  value = "",
  placeholder = "",
  class: customClass = "",
} = Astro.props;
const className = customClass ? `${defaultClass} ${customClass}` : defaultClass;
---

<!-- mb-2 text-sm font-semibold -->
{label && <Label text={label} for={`textarea-${name}`} subtext={sublabel} />}
<textarea
  id={`textarea-${name}`}
  name={name}
  required={required}
  class={className}
  placeholder={placeholder}>{value}</textarea
>
