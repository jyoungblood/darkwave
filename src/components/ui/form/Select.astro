---
// DW - Form select dropdown component

import Label from "@/components/ui/form/Label.astro";

interface Props {
  label?: string;
  sublabel?: string | string[];
  name: string;
  required?: boolean;
  value?: string;
  class?: string;
  options: { label: string; value: string }[] | { label: string; options: { label: string; value: string }[] }[];
}

// const defaultClass = "p-2 border border-neutral-400 rounded-md";
const defaultClass = "select select-bordered bg-white";
const {
  label,
  sublabel,
  name,
  required = false,
  value = "",
  options,
  class: customClass = "",
} = Astro.props;
const className = customClass ? `${defaultClass} ${customClass}` : defaultClass;
---

<!-- mb-2 text-sm font-semibold -->
{label && <Label text={label} for={`input-${name}`} subtext={sublabel} />}
<select id={`input-${name}`} name={name} required={required} class={className}>
  {
    // Check if options is an array of optgroups
    options.length > 0 && 'options' in options[0] ? (
      // Render optgroups
      (options as { label: string; options: { label: string; value: string }[] }[]).map((group) => (
        <optgroup label={group.label}>
          {group.options.map((option) => (
            <option value={option.value} selected={option.value === value}>
              {option.label}
            </option>
          ))}
        </optgroup>
      ))
    ) : options.length > 0 ? (
      // Render flat options
      (options as { label: string; value: string }[]).map((option) => (
        <option value={option.value} selected={option.value === value}>
          {option.label}
        </option>
      ))
    ) : null
  }
</select>
