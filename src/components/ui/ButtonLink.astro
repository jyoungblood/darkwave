---
// DW - Button link component styled like shadcn button
// Uses buttonVariants directly to avoid React/slot interaction issues

import { buttonVariants } from "@/components/ui/shadcn/button";
import { cn } from "@/lib/dw/helpers";

interface Props {
  text?: string;
  href?: string;
  variant?: "default" | "outline" | "secondary" | "destructive" | "ghost" | "link";
  size?: "default" | "sm" | "lg" | "icon" | "icon-sm" | "icon-lg";
  onclick?: string;
  class?: string;
  [key: string]: any;
}

const {
  text,
  href = "javascript:undefined;",
  variant = "default",
  size = "default",
  onclick,
  class: customClass = "",
  ...restProps
} = Astro.props;

// Apply button classes directly using buttonVariants
const className = cn(buttonVariants({ variant, size }), customClass);
---

<a
  href={href}
  class={className}
  onclick={onclick}
  {...restProps}
>
  {text ? text : <slot />}
</a>
