---
interface Column {
  align?: "left" | "right" | "center";
  header: string;
  sortable?: boolean;
  type?: "date" | "number" | "text";
  accessorKey?: string;
  cell: {
    class?: string;
    content: (item: any) => string | Promise<string>;
  };
}

interface PaginationProps {
  currentPage: number;
  totalItems: number;
  perPage: number;
}

interface SearchConfig {
  param?: string;
  placeholder?: string;
}

interface Props {
  data: any[] | { error: string };
  columns: Column[];
  title?: string;
  buttonLinks?: {
    href: string;
    text: string;
  }[];
  pagination?: PaginationProps;
  search?: SearchConfig;
}

import ButtonLink from "@/components/ui/ButtonLink.astro";
import { Card } from "@/components/ui/shadcn/card";

const { data, columns, title, buttonLinks, pagination, search } =
  Astro.props as Props;

// Process async content if needed - pre-process all cell content
let processedData = data;
if (data && !("error" in data) && Array.isArray(data)) {
  processedData = await Promise.all(
    data.map(async (item) => {
      const processedItem = { ...item };
      // Pre-process any async cell content and store it
      for (const column of columns) {
        const content = column.cell.content(item);
        const processedContent =
          content instanceof Promise ? await content : content;
        processedItem[`_cell_${column.header}`] = processedContent;
      }
      return processedItem;
    })
  );
}

// Generate a unique ID for this table instance
const tableId = `tableDatalist-${Math.random().toString(36).substring(2, 11)}`;

// Build column configuration for sorting
const columnConfig = columns.map((col, index) => ({
  index,
  sortable: col.sortable ?? false,
  align: col.align || "left",
  type: col.type || "text",
}));

// Build column types array for sorting (matching TicketTable pattern)
const columnTypes = columns.map((col) => col.type || "text");

// Pagination calculations (when pagination is provided)
let currentPage = pagination?.currentPage ?? 1;
let totalItems =
  pagination?.totalItems ?? (Array.isArray(data) ? data.length : 0);
let perPage = pagination?.perPage ?? (totalItems || 1);
let totalPages = Math.max(1, Math.ceil(totalItems / perPage));

function buildPageUrl(page: number): string {
  const params = new URLSearchParams(Astro.url.searchParams);
  if (page === 1) {
    params.delete("page");
  } else {
    params.set("page", page.toString());
  }
  const queryString = params.toString();
  return `${Astro.url.pathname}${queryString ? `?${queryString}` : ""}`;
}

// Search configuration (when search is enabled)
const searchParam = search?.param ?? "keyword";
const searchPlaceholder = search?.placeholder ?? "Search...";
const searchValue = Astro.url.searchParams.get(searchParam) ?? "";

// Preserve existing query params when submitting search, except keyword + page
const preservedSearchParams = new URLSearchParams(Astro.url.searchParams);
preservedSearchParams.delete(searchParam);
preservedSearchParams.delete("page");
const preservedSearchEntries = Array.from(preservedSearchParams.entries());
---

<style>
  .sort-indicator {
    margin-left: 0.25rem;
    display: inline-block;
    width: 0.75rem;
    white-space: nowrap;
    position: relative;
    top: 0.018rem;
    font-size: 0.82rem;
  }
  .sort-indicator:not(.active) {
    opacity: 0;
  }
  .sort-indicator.active {
    opacity: 0.5;
  }
  th .header-content {
    display: inline;
  }
</style>
<script is:inline define:vars={{ tableId, columnConfig, columnTypes }}>
  function initializeTableSorting() {
    const table = document.getElementById(tableId);
    if (!table) return;

    const thead = table.querySelector("thead");
    const tbody = table.querySelector("tbody");
    if (!thead || !tbody) return;

    let currentSortColumn = -1;
    let currentSortDirection = "asc";

    function getCellValue(cell, columnIndex) {
      const type = columnTypes[columnIndex] || "text";

      if (type === "date") {
        // Use data-order attribute if available, otherwise parse the date
        const dataOrder = cell.getAttribute("data-order");
        if (dataOrder) {
          return parseInt(dataOrder, 10);
        }
        const text = cell.textContent?.trim() || "";
        if (!text) return 0;
        const date = new Date(text);
        return isNaN(date.getTime()) ? 0 : date.getTime();
      }

      if (type === "number") {
        const text = cell.textContent?.trim() || "";
        const match = text.match(/\d+/);
        return match ? parseInt(match[0], 10) : 0;
      }

      // text type
      return (cell.textContent?.trim() || "").toLowerCase();
    }

    function sortTable(columnIndex) {
      const rows = Array.from(tbody.querySelectorAll("tr"));

      // Toggle direction if clicking the same column
      if (currentSortColumn === columnIndex) {
        currentSortDirection = currentSortDirection === "asc" ? "desc" : "asc";
      } else {
        currentSortColumn = columnIndex;
        currentSortDirection = "asc";
      }

      rows.sort((a, b) => {
        const cellsA = a.querySelectorAll("td");
        const cellsB = b.querySelectorAll("td");
        const cellA = cellsA[columnIndex];
        const cellB = cellsB[columnIndex];

        if (!cellA || !cellB) return 0;

        const valueA = getCellValue(cellA, columnIndex);
        const valueB = getCellValue(cellB, columnIndex);

        let comparison = 0;
        if (valueA < valueB) {
          comparison = -1;
        } else if (valueA > valueB) {
          comparison = 1;
        }

        return currentSortDirection === "asc" ? comparison : -comparison;
      });

      // Remove all rows
      rows.forEach((row) => row.remove());

      // Append sorted rows
      rows.forEach((row) => tbody.appendChild(row));

      // Update sort indicators
      updateSortIndicators(columnIndex);
    }

    function updateSortIndicators(activeColumn) {
      const headers = thead.querySelectorAll("th");
      headers.forEach((header, index) => {
        const config = columnConfig[index];
        // Only process sortable columns
        if (!config || config.sortable !== true) {
          return;
        }

        // Find or create the sort indicator placeholder
        let indicator = header.querySelector(".sort-indicator");
        if (!indicator) {
          indicator = document.createElement("span");
          indicator.className = "sort-indicator inactive";
          indicator.setAttribute("aria-hidden", "true");
          indicator.textContent = "▲";
          // Append to header-content if it exists, otherwise to header
          const headerContent = header.querySelector(".header-content");
          if (headerContent) {
            headerContent.appendChild(indicator);
          } else {
            header.appendChild(indicator);
          }
        }

        // Remove sort direction classes from header and indicator
        header.classList.remove("sort-asc", "sort-desc");
        indicator.classList.remove("sort-asc", "sort-desc");

        if (index === activeColumn) {
          // Show sort indicator
          indicator.textContent = currentSortDirection === "asc" ? "▲" : "▼";
          indicator.classList.add("active");
          indicator.classList.remove("inactive");
          // Add sort direction classes
          header.classList.add(`sort-${currentSortDirection}`);
          indicator.classList.add(`sort-${currentSortDirection}`);
        } else {
          // Hide but keep space - use placeholder to reserve space
          indicator.textContent = "▲";
          indicator.classList.remove("active");
          indicator.classList.add("inactive");
        }
      });
    }

    // Add click handlers to headers and initialize indicators
    const headers = thead.querySelectorAll("th");
    headers.forEach((header, index) => {
      const config = columnConfig[index];
      if (!config || config.sortable !== true) {
        return; // Skip non-sortable columns
      }

      header.style.cursor = "pointer";
      header.classList.add(
        "hover:bg-muted/50",
        "transition-colors",
        "select-none"
      );
      header.setAttribute("role", "button");
      header.setAttribute("tabindex", "0");
      header.setAttribute(
        "aria-label",
        `Sort by ${header.textContent?.trim().replace(/▲|▼/g, "").trim() || "column"}`
      );

      // Initialize sort indicator with placeholder to reserve space
      const indicator = header.querySelector(".sort-indicator");
      if (indicator) {
        indicator.textContent = "▲";
        indicator.classList.add("inactive");
      }

      function handleSort() {
        sortTable(index);
      }

      header.addEventListener("click", handleSort);
      header.addEventListener("keydown", (e) => {
        if (e.key === "Enter" || e.key === " ") {
          e.preventDefault();
          handleSort();
        }
      });
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initializeTableSorting);
  } else {
    initializeTableSorting();
  }
</script>

<div>
  {
    (title || (buttonLinks && buttonLinks.length > 0)) && (
      <div class="flex gap-8 w-full items-start justify-between mb-4">
        <div>
          {title && <h2 class="text-xl font-semibold mb-2">{title}</h2>}

          {search && (
            <form
              method="GET"
              action={Astro.url.pathname}
              class="relative w-full sm:w-64"
            >
              {preservedSearchEntries.map(([name, value]) => (
                <input type="hidden" name={name} value={value} />
              ))}
              <input
                type="text"
                name={searchParam}
                value={searchValue}
                placeholder={searchPlaceholder}
                class="flex h-8 w-full rounded-md border border-input bg-background px-3 py-2 text-xs sm:text-sm file:border-0 file:bg-transparent file:text-xs file:font-medium placeholder:text-muted-foreground ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 pl-7"
                style="line-height: 2rem;"
              />
              <button
                type="submit"
                class="absolute left-1.5 top-1/2 -translate-y-1/2 flex items-center justify-center text-muted-foreground hover:text-foreground transition-colors"
                aria-label="Search"
              >
                <span class="icon-[tabler--search] w-4 h-4" />
              </button>
            </form>
          )}
        </div>

        <div class="flex flex-col gap-4 items-end w-full sm:w-auto">
          {buttonLinks && buttonLinks.length > 0 && (
            <div class="flex gap-4 self-end">
              {buttonLinks.map((buttonLink) => (
                <ButtonLink href={buttonLink.href} text={buttonLink.text} />
              ))}
            </div>
          )}
        </div>
      </div>
    )
  }

  {
    data && !("error" in data) && Array.isArray(processedData) ? (
      processedData.length === 0 ? (
        <Card>
          <p class="text-muted-foreground p-6">No data found...</p>
        </Card>
      ) : (
        <div class="relative w-full">
          <Card>
            <table id={tableId} class="w-full caption-bottom text-sm">
              <thead class="[&_tr]:border-b text-xs">
                <tr>
                  {columns.map((column) => {
                    const alignClass =
                      column.align === "right"
                        ? "text-right"
                        : column.align === "center"
                          ? "text-center"
                          : "text-left";
                    return (
                      <th
                        class={`h-12 px-6 py-4 ${alignClass} align-middle font-medium text-muted-foreground`}
                      >
                        <span class="header-content">
                          {column.header}
                          {"\u2060"}
                          {column.sortable === true && (
                            <span
                              class="sort-indicator inactive"
                              aria-hidden="true"
                            >
                              ▲
                            </span>
                          )}
                        </span>
                      </th>
                    );
                  })}
                </tr>
              </thead>
              <tbody class="[&_tr:last-child]:border-0">
                {processedData.map((item) => {
                  return (
                    <tr class="border-b transition-colors hover:bg-muted/50">
                      {columns.map((column) => {
                        const alignClass =
                          column.align === "right"
                            ? "text-right"
                            : column.align === "center"
                              ? "text-center"
                              : "text-left";
                        const cellContent =
                          item[`_cell_${column.header}`] || "";
                        const cellClass = column.cell.class || "";

                        // Add data-order attribute for date/number columns
                        let dataOrder: number | undefined = undefined;
                        if (column.type === "date" && column.accessorKey) {
                          const rawValue = item[column.accessorKey];
                          if (rawValue) {
                            const date = new Date(rawValue);
                            if (!isNaN(date.getTime())) {
                              dataOrder = date.getTime();
                            }
                          }
                        } else if (
                          column.type === "number" &&
                          column.accessorKey
                        ) {
                          const rawValue = item[column.accessorKey];
                          if (rawValue !== null && rawValue !== undefined) {
                            const num =
                              typeof rawValue === "number"
                                ? rawValue
                                : parseFloat(rawValue);
                            if (!isNaN(num)) {
                              dataOrder = num;
                            }
                          }
                        }

                        return (
                          <td
                            class={`py-4 px-6 ${alignClass} align-middle ${cellClass}`}
                            data-order={dataOrder}
                            set:html={cellContent}
                          />
                        );
                      })}
                    </tr>
                  );
                })}
              </tbody>
            </table>
          </Card>

          {pagination && totalPages > 1 && (
            <div class="flex justify-end items-center gap-2 mt-4">
              {/* Previous button */}
              {currentPage > 1 && (
                <a
                  href={buildPageUrl(currentPage - 1)}
                  class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background border border-input bg-background hover:bg-accent hover:text-accent-foreground h-8 pl-1 pr-1.5"
                  aria-label="Previous page"
                >
                  <span class="icon-[tabler--chevron-left] w-4 h-4" />
                </a>
              )}

              {/* Page number links */}
              {Array.from({ length: totalPages }, (_, i) => i + 1).map(
                (pageNum) => {
                  const isCurrentPage = pageNum === currentPage;
                  return (
                    <a
                      href={buildPageUrl(pageNum)}
                      class={`inline-flex items-center justify-center rounded-md text-xs font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background border h-8 px-2.5 ${
                        isCurrentPage
                          ? "bg-primary text-primary-foreground hover:bg-primary/90 border-primary"
                          : "bg-background hover:bg-accent hover:text-accent-foreground border-input"
                      }`}
                      aria-label={`Go to page ${pageNum}`}
                      aria-current={isCurrentPage ? "page" : undefined}
                    >
                      {pageNum}
                    </a>
                  );
                }
              )}

              {/* Next button */}
              {currentPage < totalPages && (
                <a
                  href={buildPageUrl(currentPage + 1)}
                  class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background border border-input bg-background hover:bg-accent hover:text-accent-foreground h-8 pr-1 pl-1.5"
                  aria-label="Next page"
                >
                  <span class="icon-[tabler--chevron-right] w-4 h-4" />
                </a>
              )}
            </div>
          )}
        </div>
      )
    ) : (
      <Card>
        <p class="text-muted-foreground p-6">
          {"error" in data ? data.error : "No data available"}
        </p>
      </Card>
    )
  }
</div>
