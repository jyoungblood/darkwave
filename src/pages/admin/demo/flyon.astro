    <div class="flex items-center gap-1">
      <input
        type="checkbox"
        class="switch switch-outline"
        id="switchDefault2"
        checked
      />
      <label class="label-text text-base" for="switchDefault2"> Default </label>
    </div>
    <div class="flex items-center gap-1">
