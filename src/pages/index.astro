---
import Layout from "@/layouts/Layout.astro";
import LinkButton from "@/components/ui/LinkButton.astro";
---

<Layout>
  <div class="flex flex-col items-center justify-center flex-1">
    <div class="text-center">
      <div>
        <div class="text-2xl font-bold mb-4">DARKWAVE 0.7.8</div>
        <div class="flex items-center justify-between gap-4">
          <LinkButton
            size="sm"
            href="https://darkwave.ltd"
            target="_blank"
          >
            <span class="icon-[tabler--book]"></span>Docs
          </LinkButton>
          <LinkButton
            size="sm"
            href="https://github.com/jyoungblood/darkwave"
            target="_blank"
          >
            <span class="icon-[tabler--brand-github]"></span>Source
          </LinkButton>
        </div>
      </div>
    </div>
  </div>
</Layout>
