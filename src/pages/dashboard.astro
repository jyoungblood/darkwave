---
import Layout from "@/layouts/Layout.astro";
import { db } from "@/lib/db";
import ButtonLink from "@/components/ui/ButtonLink.astro";

let user;

try {
  user = await db
    .selectFrom("user")
    .selectAll()
    .where("id", "=", Astro.locals.userId!)
    .executeTakeFirst();
} catch (error) {
  console.error("Error fetching user:", error);
}

